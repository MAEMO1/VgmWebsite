# Environment variables for VGM Website
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key

# Database Configuration
DATABASE_URL=postgresql://vgm_user:vgm_password@localhost:5432/vgm_database
# For development with SQLite:
# DATABASE_URL=sqlite:///vgm_website.db

# Production Database (Railway/Neon)
# DATABASE_URL=postgresql://username:password@host:port/database

# Email Configuration (for contact forms and password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMTP Configuration (for transactional emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER=noreply@vgm-gent.be
SMTP_USE_TLS=true

# Frontend Base URL (for password reset links)
FRONTEND_BASE_URL=http://localhost:3000

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Maps API (for mosque locations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Security Configuration
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/vgm_website.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://frontend-maemo.vercel.app,https://vgm-website.vercel.app

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=True

# Development Settings
DEBUG=True
TESTING=False
WTF_CSRF_ENABLED=True

# Production Settings (uncomment for production)
# DEBUG=False
# TESTING=False
# WTF_CSRF_ENABLED=True
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax
