          "password": {
            "type": "string",
            "description": "User password"
          },
          "remember": {
            "type": "boolean",
            "description": "Remember user"
          }
        }
      },
      "Register": {
        "type": "object",
        "required": ["email", "password", "first_name", "last_name"],
