          },
          "code": {
            "type": "integer",
            "description": "Error code"
          }
        }
      },
      "Success": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Success message"
          },
          "data": {
            "type": "object",
            "description": "Response data"
          }
        }
      },
